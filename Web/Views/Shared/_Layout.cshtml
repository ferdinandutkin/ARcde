<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AUTORL</title>
    <link rel="stylesheet" href="~/twitter-bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/font-awesome/css/all.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="d-flex flex-column" style="background-color: #f2f2f2;">
    <div id="page-content">
        <header role="banner">
            <nav class="navbar navbar-expand-md navbar-dark bg-dark">
                <div class="container">
                    <div class="col-3">
                        <a class="navbar-brand logo-link" asp-controller="Home"><span>Auto</span><span class="red-logo">shop</span></a>
                        <button class="navbar-toggler" type="button" data-toggle="collapse">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                    </div>
                    <div class="collapse navbar-collapse">
                        <div class="col-9  d-flex justify-content-center">
                            <ul class="navbar-nav m-auto pl-lg-5 pl-0 menu">
                                <li class="nav-item">
                                    <a class="nav-link text-white menu-link" asp-controller="Home">Home</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white menu-link" asp-controller="Cars">Cars</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white menu-link" href="#">Shops</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white menu-link" href="#">About</a>
                                </li>
                            </ul>
                        </div>
                        <div class="col-3">
                            <ul class="navbar-nav float-end">
                                <li class="nav-item">
                                    <a class="text-white" href="#"><i class="mx-2 fa fa-sign-in-alt"></i></a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </nav>
        </header>
        <main>
            @RenderBody()
        </main>
    </div>
    <footer class="flex-shrink-0 py-4 bg-dark text-white">
        <div class="container text-center">
            <small>Footer</small>
        </div>
    </footer>
    <script src="~/twitter-bootstrap/js/bootstrap.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
